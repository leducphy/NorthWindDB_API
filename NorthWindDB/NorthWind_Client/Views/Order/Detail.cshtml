@using NorthWind_Client.Models
@{
    var orderDetails = ViewBag.OrderDetails as Response.OrderDTO2;
}
<a asp-controller="Order" asp-action="Index" class="btn btn-primary">Go back</a>
<div class="container mt-5">
        <h1 class="mb-4">Order Details</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Order Information</h2>
            <dl class="row">
                <dt class="col-sm-3">Order ID:</dt>
                <dd class="col-sm-9">@orderDetails.OrderId</dd>

                <dt class="col-sm-3">Employee ID:</dt>
                <dd class="col-sm-9">@orderDetails.EmployeeId</dd>

                <dt class="col-sm-3">Employee Name:</dt>
                <dd class="col-sm-9">@orderDetails.EmployeeName</dd>

                <dt class="col-sm-3">Customer ID:</dt>
                <dd class="col-sm-9">@orderDetails.CustomerId</dd>

                <dt class="col-sm-3">Customer Name:</dt>
                <dd class="col-sm-9">@orderDetails.CustomerName</dd>

                <dt class="col-sm-3">Order Date:</dt>
                <dd class="col-sm-9">@orderDetails.OrderDate</dd>

                <dt class="col-sm-3">Required Date:</dt>
                <dd class="col-sm-9">@orderDetails.RequiredDate</dd>

                <dt class="col-sm-3">Shipped Date:</dt>
                <dd class="col-sm-9">@orderDetails.ShippedDate</dd>

                <dt class="col-sm-3">Ship Via:</dt>
                <dd class="col-sm-9">@orderDetails.ShipVia</dd>

                <dt class="col-sm-3">Ship Company Name:</dt>
                <dd class="col-sm-9">@orderDetails.ShipCompanyName</dd>

                <dt class="col-sm-3">Freight:</dt>
                <dd class="col-sm-9">@orderDetails.Freight</dd>

                <dt class="col-sm-3">Ship Name:</dt>
                <dd class="col-sm-9">@orderDetails.ShipName</dd>

                <dt class="col-sm-3">Ship Address:</dt>
                <dd class="col-sm-9">@orderDetails.ShipAddress</dd>

                <dt class="col-sm-3">Ship City:</dt>
                <dd class="col-sm-9">@orderDetails.ShipCity</dd>

                <dt class="col-sm-3">Ship Region:</dt>
                <dd class="col-sm-9">@orderDetails.ShipRegion</dd>

                <dt class="col-sm-3">Ship Postal Code:</dt>
                <dd class="col-sm-9">@orderDetails.ShipPostalCode</dd>

                <dt class="col-sm-3">Ship Country:</dt>
                <dd class="col-sm-9">@orderDetails.ShipCountry</dd>

                <dt class="col-sm-3">Total Amount:</dt>
                <dd class="col-sm-9">@orderDetails.TotalAmount</dd>

                <dt class="col-sm-3">Total Item:</dt>
                <dd class="col-sm-9">@orderDetails.TotalItem</dd>

                <dt class="col-sm-3">Is Late Date:</dt>
                <dd class="col-sm-9">@(orderDetails.IsLateDate.HasValue ? (orderDetails.IsLateDate.Value ? "Yes" : "No") : "N/A")</dd>

            </dl>
        </div>
    </div>


    <div class="card">
            <div class="card-body">
                <h2 class="card-title">Products</h2>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Category ID</th>
                                <th>Category Name</th>
                                <th>Unit Price</th>
                                <th>Quantity Per Unit</th>
                                <th>Units In Stock</th>
                                <th>Units On Order</th>
                                <th>Reorder Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in orderDetails.Products)
                            {
                                <tr>
                                    <td>@product.ProductId</td>
                                    <td>@product.ProductName</td>
                                    <td>@product.CategoryId</td>
                                    <td>@product.CategoryName</td>
                                    <td>@product.UnitPrice</td>
                                    <td>@product.QuantityPerUnit</td>
                                    <td>@product.UnitsInStock</td>
                                    <td>@product.UnitsOnOrder</td>
                                    <td>@product.ReorderLevel</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>